{
    "app-id": "app.polychromatic.test",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "polychromatic-controller",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--talk-name=org.razer",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "sassc",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sass/sassc/archive/3.6.2.tar.gz",
                    "sha256": "608dc9002b45a91d11ed59e352469ecc05e4f58fc1259fc9a9f5b8f0f8348a03"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": ["autoreconf -si"]
                }
            ],
            "modules": [
                {
                    "name": "libsass",
                    "cleanup": ["*"],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/sass/libsass/archive/3.6.6.tar.gz",
                            "sha256": "11f0bb3709a4f20285507419d7618f3877a425c0131ea8df40fe6196129df15d"
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": ["autoreconf -si"]
                        }
                    ]
                }
            ]
        },
        {
            "name": "python-setproctitle",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --no-build-isolation --prefix=$FLATPAK_DEST ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/s/setproctitle/setproctitle-1.3.3.tar.gz",
                    "sha256": "c913e151e7ea01567837ff037a23ca8740192880198b7fbb90b16d181607caae"
                }
            ]
        },
        {
            "name": "pyqt-deps",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "modules": [
                "python3-PyQt-builder.json"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/PyQt6_sip/PyQt6_sip-13.2.0.tar.gz",
                    "sha256": "10e6c5d0004308efcbe8826ff0b8faf6e6f60c9e906cffeb26834e18e6340ed4"
                }
            ]
        },
        {
            "name": "pyqt6",
            "buildsystem": "simple",
            "build-options": {
                "env": [
                    "QMAKEPATH=/app"
                ]
            },
            "build-commands": [
                "sip-install --confirm-license --no-designer-plugin --no-tools --concatenate=1 --debug --no-docstrings --verbose --qt-shared --build-dir=\"${FLATPAK_BUILDER_BUILDDIR}/tmp\" --scripts-dir=\"${FLATPAK_DEST}/bin\" --target-dir=/app/lib/python3.11/site-packages/ --enable=QtCore --enable=QtWidgets --enable=QtGui --enable=QtWebChannel --enable=QtNetwork --enable=QtPrintSupport --qmake-setting=QMAKE_CFLAGS_RELEASE='-I/usr/include/python3.11/' --qmake-setting=QMAKE_CXXFLAGS_RELEASE='-I/usr/include/python3.11/' --qmake-setting=QMAKE_INCDIR+=/app/include/QtWebEngine --qmake-setting=QMAKE_INCDIR+=/app/include/QtWebEngineCore --qmake-setting=QMAKE_INCDIR+=/app/include/QtWebEngineWidgets"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/PyQt6/PyQt6-6.2.2.tar.gz",
                    "sha256": "9325a0f51c08e37340d916d2723daf9a25c844dac99d71d6c5aacb4f6ee00171"
                }
            ]
        },
        {
            "name": "polychromatic",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/polychromatic/polychromatic/archive/refs/tags/v0.9.2.tar.gz",
                    "sha256": "5b7a36e5010657c9dcabbb29c850ba4269489989288eff7e3949ea7b1fe78af5"
                }
            ]
        }
    ]
}
